<div class="col-md-12 full-content">

<h2>Add Song</h2>
<form method="POST" action="/song">

  <label for="title">Title</label>
  <div class="box">
    <input type="text" id="title" name="title"/>
  </div>

  <label>Artists</label>
  <div class="add-artist-container">
    <div class="add-artist-field fa fa-plus"><span class="add-artist-text">add artist</span></div>
    <div class="artist-box">
      <input type="text" id="artist" name="artist[]" />
    </div>
  </div>

  <label for="genre">Select Genre</label>
  <div class="box">
    <select name="genre">
      <% @genres.each do |genre| %>
      <option value="<%= genre.name %>"><%= genre.name %></option>
      <% end %>
    </select>
  </div>
    
  <label for="lyrics">Lyrics</label>
  <div class="box">
    <textarea id="lyrics" name="lyrics"></textarea>
  </div>

  <button type="submit" class="fa fa-chevron-right">
  </button>

</form>

</div>